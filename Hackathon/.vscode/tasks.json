{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ELO Flows Components",
            "command": "gradle",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/flows"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": "build",
            "args": ["build"]
        },
        {
            "label": "Hot Build ELO Flows Components",
            "command": "gradle",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/flows"
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "args": ["-t", "build"]
        }
    ]
}